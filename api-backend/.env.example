# Environment Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (Optimized for 150 concurrent users)
# connection_limit=50 : Max 50 DB connections (sufficient for 150 users with connection reuse)
# pool_timeout=20 : Wait max 20s if pool is saturated
DATABASE_URL="postgresql://postgres:password@localhost:5432/amisrim?schema=public&connection_limit=50&pool_timeout=20"

# Prisma Connection Pool (Performance optimization)
PRISMA_POOL_SIZE=50
PRISMA_POOL_TIMEOUT=20000

# JWT Configuration
# IMPORTANT: Generate a strong secret with: openssl rand -base64 64
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-64-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
# Restrict to your frontend domain only in production
CORS_ORIGIN=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Storage Configuration (local or s3)
STORAGE_TYPE=local
# For S3-compatible storage (optional)
# S3_ENDPOINT=
# S3_BUCKET=
# S3_ACCESS_KEY=
# S3_SECRET_KEY=
# S3_REGION=

# WebSocket Configuration
WS_PORT=3002
WS_MAX_CONNECTIONS=200

# Admin Configuration
ADMIN_EMAIL=admin@amisrim.tg
ADMIN_PASSWORD=ChangeThisPassword123!

# Rate Limiting (Optimized in code)
# General API: 1000 req/min
# Auth routes: 5 req/15min (strict)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=info

# Optional: Monitoring & Error Tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# UPTIME_ROBOT_API_KEY=your_api_key
