                        "url": "{{base_url}}/contributions"
                    }
                },
                {
                    "name": "Create Contribution",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/contributions",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"profileId\": \"USER_ID_HERE\",\n  \"amount\": 5000,\n  \"month\": \"Janvier\",\n  \"year\": \"2026\",\n  \"status\": \"paid\",\n  \"paymentMethod\": \"Mobile Money\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Leisure",
            "item": [
                {
                    "name": "Get All Events",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/leisure/events"
                    }
                },
                {
                    "name": "Create Event",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/leisure/events",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"title\": \"Pique-nique de fin d'année\",\n  \"description\": \"Journée détente à la plage\",\n  \"type\": \"pique-nique\",\n  \"location\": \"Plage de Lomé\",\n  \"costPerPerson\": 10000,\n  \"maxParticipants\": 50\n}"
                        }
