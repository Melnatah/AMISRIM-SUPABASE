                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"eventId\": \"EVENT_ID_HERE\",\n  \"profileId\": \"USER_ID_HERE\",\n  \"status\": \"pending\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Storage",
            "item": [
                {
                    "name": "Upload File",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/storage/upload",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "multipart/form-data"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": "/path/to/file.pdf"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Settings",
            "item": [
                {
                    "name": "Get All Settings",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/settings"
                    }
                },
                {
                    "name": "Update Setting",
                    "request": {
                        "method": "PUT",
                        "url": "{{base_url}}/settings/monthly_contribution",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"value\": \"6000\"\n}"
                        }
                    }
                }
            ]
        }
    ]
}