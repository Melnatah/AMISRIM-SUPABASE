{
    "info": {
        "name": "AMIS RIM TOGO API",
        "description": "Collection complète pour tester l'API Node.js",
        "version": "1.0.0"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{auth_token}}",
                "type": "string"
            }
        ]
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3001/api",
            "type": "string"
        },
        {
            "key": "auth_token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Health Check",
            "request": {
                "method": "GET",
                "url": "http://localhost:3001/health"
            }
        },
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Signup",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/auth/signup",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"resident@amisrim.tg\",\n  \"password\": \"Password123!\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"phone\": \"+228 90 00 00 00\",\n  \"year\": \"R1\",\n  \"hospital\": \"CHU Sylvanus Olympio\"\n}"
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/auth/login",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@amisrim.tg\",\n  \"password\": \"ChangeThisPassword123!\"\n}"
                        }
                    }
                },
                {
                    "name": "Refresh Token",
                    "request": {
                        "method": "POST",
                        "url": "{{base_url}}/auth/refresh",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"token\": \"{{auth_token}}\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Profiles",
            "item": [
                {
                    "name": "Get All Profiles",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/profiles"
                    }
                },
                {
                    "name": "Get My Profile",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/profiles/me"
                    }
                },
                {
                    "name": "Update My Profile",
                    "request": {
                        "method": "PUT",
                        "url": "{{base_url}}/profiles/me",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"firstName\": \"Jane\",\n  \"phone\": \"+228 90 11 22 33\"\n}"
                        }
                    }
                }
            ]
        },
        {
            "name": "Sites",
